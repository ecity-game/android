<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <LinearLayout
        android:id="@+id/llScoresHeader"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_scores_num"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1.1"
            android:text="№"
            android:textSize="22sp"
            android:paddingTop="4dip"
            android:paddingBottom="5dip"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tv_scores_player"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="Игрок"
            android:textSize="22sp"
            android:paddingTop="4dip"
            android:paddingBottom="5dip"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tv_scores_victory"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="Победы"
            android:textSize="22sp"
            android:paddingTop="4dip"
            android:paddingBottom="5dip"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tv_scores_defeat"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="Поражения"
            android:textSize="22sp"
            android:paddingTop="4dip"
            android:paddingBottom="5dip"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tv_scores_coefficient"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="Коэффициент"
            android:textSize="22sp"
            android:paddingTop="4dip"
            android:paddingBottom="5dip"
            android:gravity="center"
            />

    </LinearLayout>

    <ListView
        android:id="@+id/lvScores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/textPrimaryColor"
        android:dividerHeight="1dp"
        />

</LinearLayout>