<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="j.trt.s.hi.st.ecities.activities.MainActivity">

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo"/>

    <LinearLayout
        android:id="@+id/llMenuButtonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/ivLogo">

        <Button
            android:id="@+id/btnNewGame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="Новая игра"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"/>
        <Button
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="Продолжить"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"/>
        <Button
            android:id="@+id/btnScores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="Рекорды"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"/>
        <Button
            android:id="@+id/btnRules"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="Правила"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"/>
        <Button
            android:id="@+id/btnLibrary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="Библиотека"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"/>
        <Button
            android:id="@+id/btnExit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="Выход"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"/>

    </LinearLayout>

    <pl.droidsonroids.gif.GifTextView
        android:id="@+id/ivMap"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/map"
        android:layout_below="@+id/llMenuButtonContainer"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:id="@+id/llCreatedContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/tvCreated"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Created in Odessa"
            android:gravity="center_vertical"
            android:textColor="@color/colorAccent"/>

        <ImageView
            android:id="@+id/ivAnchor"
            android:layout_width="15dp"
            android:layout_height="30dp"
            android:src="@drawable/anchor"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>

</RelativeLayout>
